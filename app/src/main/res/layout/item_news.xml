<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/logo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP版本更新"
                android:textSize="12dp"
                android:textColor="@color/main_bottom_text_color_selector"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为迎接2018CMCC全球区块链交流峰会杭州站的盛大开幕，平台将迎来重磅更新至2.0版本"
                android:textSize="10dp"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询详情>>"
                android:textSize="12dp"
                android:textColor="@color/main_bottom_text_color_selector"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/main_botton_text_color"></LinearLayout>

</LinearLayout>